<%= form_for [:admin, @beacon] do |f| %>
  <div class="form-group">
    <%= f.label :major %>
    <%= f.number_field :major, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :minor %>
    <%= f.number_field :minor, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :code %>
    <%= f.text_field :code, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.submit class: 'btn btn-primary' %>
  </div>
<% end %>
